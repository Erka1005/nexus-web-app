---
import astroLogo from "../assets/astro.svg";
import background from "../assets/background.svg";
import "../styles/global.css";
---

<div class="relative min-h-screen bg-slate-950 text-white">
  <!-- Background (image + glow) -->
  <img
    src={background.src}
    alt=""
    fetchpriority="high"
    class="pointer-events-none fixed inset-0 -z-20 h-full w-full object-cover opacity-40 blur-[90px]"
  />
  <div class="pointer-events-none fixed inset-0 -z-10">
    <div class="absolute -top-40 left-1/2 h-[520px] w-[520px] -translate-x-1/2 rounded-full bg-indigo-600/25 blur-[120px]"></div>
    <div class="absolute bottom-[-140px] right-[-140px] h-[520px] w-[520px] rounded-full bg-fuchsia-600/20 blur-[140px]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(1200px_circle_at_50%_-10%,rgba(255,255,255,0.10),transparent_55%)]"></div>
  </div>

  <main class="mx-auto flex min-h-screen max-w-md flex-col px-4 py-8">
    <!-- Header -->
    <header class="flex items-center justify-between">
      <a href="https://astro.build" class="inline-flex items-center gap-3">
        <span class="grid h-10 w-10 place-items-center rounded-2xl bg-white/10 ring-1 ring-white/15">
          <img src={astroLogo.src} width="22" height="22" alt="Astro" class="opacity-95" />
        </span>
        <div class="leading-tight">
          <div class="text-xs text-white/60">Astro</div>
          <div class="text-sm font-semibold tracking-tight">QR Landing</div>
        </div>
      </a>

      <div class="rounded-full bg-emerald-500/15 px-3 py-1 text-xs font-semibold text-emerald-200 ring-1 ring-emerald-400/25">
        Active
      </div>
    </header>

    <!-- Card -->
    <section class="mt-6 rounded-3xl bg-white/5 p-5 ring-1 ring-white/10 backdrop-blur-xl">
      <h1 class="text-2xl font-bold tracking-tight">
        To get started, open
        <code class="mx-1 inline-flex items-center rounded-lg border border-white/15 bg-white/10 px-2 py-1 align-middle">
          <span class="font-mono text-sm text-white/90">src/pages</span>
        </code>
      </h1>

      <p class="mt-2 text-sm text-white/60">
        directory in your project.
      </p>

      <div class="mt-5 grid gap-3">
        <a
          class="inline-flex items-center justify-center gap-2 rounded-2xl bg-gradient-to-r from-indigo-500 to-fuchsia-500 px-4 py-3 text-sm font-bold shadow-lg shadow-fuchsia-500/15 transition hover:opacity-95 active:scale-[0.99]"
          href="https://docs.astro.build"
        >
          Read our docs <span aria-hidden>â†’</span>
        </a>

        <a
          class="inline-flex items-center justify-center gap-2 rounded-2xl bg-white/5 px-4 py-3 text-sm font-semibold ring-1 ring-white/10 transition hover:bg-white/10"
          href="https://astro.build/chat"
        >
          Join our Discord <span aria-hidden>â†—</span>
        </a>
      </div>
    </section>

    <!-- News card -->
    <a
      href="https://astro.build/blog/astro-5/"
      class="mt-5 rounded-3xl bg-white/5 p-5 ring-1 ring-white/10 backdrop-blur-xl transition hover:bg-white/8"
    >
      <div class="flex items-start gap-3">
        <div class="grid h-10 w-10 place-items-center rounded-2xl bg-white/10 ring-1 ring-white/15">
          <span class="text-lg">ðŸ”¥</span>
        </div>
        <div>
          <h2 class="text-base font-semibold">What's New in Astro 5.0?</h2>
          <p class="mt-1 text-sm text-white/60">
            From content layers to server islands â€” click to learn more.
          </p>
        </div>
      </div>
    </a>

    <footer class="mt-auto pt-6 text-center text-xs text-white/45">
      Powered by Astro â€¢ Secure QR Access
    </footer>
  </main>
</div>
